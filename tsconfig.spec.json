{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "commonjs",
    "types": [
      "jest",
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ]
  },
  "include": [
    "jest.config.ts",
    "frontend/**/*.test.ts",
    "frontend/**/*.spec.ts",
    "frontend/**/*.test.tsx",
    "frontend/**/*.spec.tsx",
    "frontend/**/*.test.js",
    "frontend/**/*.spec.js",
    "frontend/**/*.test.jsx",
    "frontend/**/*.spec.jsx",
    "frontend/**/*.d.ts"
  ]
}
